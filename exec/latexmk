#!/bin/bash
docker run --rm                 `# remove container after use` \
    -i                          `# interactive mode` \
    -v $(pwd -P):$(pwd -P)      `# share current directory` \
    -w $(pwd -P)                `# make current directory as latex workding directory` \
    harmish/latex latexmk "$@"  `# run latexmk container passing all user args`
