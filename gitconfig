[core]
    autocrlf = false
    editor = vim
    eol = lf
	excludesfile = ~/.gitignore_global
[merge]
    tool = meld
[alias]
    fa = fetch --all
    fu = fetch upstream
    prum = pull --rebase upstream master
    co = checkout
    br = branch
    ci = commit
    st = status
    df = diff
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    pr = pull --rebase
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lbr = log --oneline --abbrev-commit --branches=* --graph --decorate
    who = shortlog -s --
[color]
    ui = auto
[http]
    sslVerify = no
[user]
    name = Harmish Khambhaita
    email = hkhambhaita@anybotics.com
[push]
    default = nothing
[mergetool]
    keepBackup = false
[credential]
	helper = cache --timeout=60
