[core]
	editor = vim
	excludefile = $HOME/.gitignore_global
[merge]
	tool = meld
[alias]
	fa = fetch --all
	fu = fetch upstream
	prum = pull --rebase upstream master
	co = checkout
	br = branch
	ci = commit
	st = status
	df = diff
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	pr = pull --rebase
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	lbr = log --oneline --abbrev-commit --branches=* --graph --decorate
	who = shortlog -s --
[color]
	ui = auto
[http]
	sslVerify = no
[user]
	name = harmish khambhaita
	email = harmish@laas.fr
[push]
	default = nothing
[mergetool]
	keepBackup = false
